    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver"],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Receiver",
            "type": "python",
            "request": "launch",
            "program": "./manage.py",
            "args": ["receiver", "--autoreload"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
